{% extends 'base.html.twig' %}

{% block body %}
    <h1>Durezas list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>De</th>
                <th>A</th>
                <th>Descricao</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dureza in durezas %}
            <tr>
                <td><a href="{{ path('dureza_show', { 'id': dureza.id }) }}">{{ dureza.id }}</a></td>
                <td>{{ dureza.de }}</td>
                <td>{{ dureza.a }}</td>
                <td>{{ dureza.descricao }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('dureza_show', { 'id': dureza.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('dureza_edit', { 'id': dureza.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dureza_new') }}">Create a new dureza</a>
        </li>
    </ul>
{% endblock %}
