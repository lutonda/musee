{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lugar</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lugar.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ lugar.numero }}</td>
            </tr>
            <tr>
                <th>Descricao</th>
                <td>{{ lugar.descricao }}</td>
            </tr>
            <tr>
                <th>Lotacao</th>
                <td>{{ lugar.lotacao }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lugar_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lugar_edit', { 'id': lugar.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
