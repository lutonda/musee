{% extends 'base.html.twig' %}

{% block body %}
    <h1>Funcionario</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ funcionario.id }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ funcionario.tipo }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{% if funcionario.data %}{{ funcionario.data|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('funcionario_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('funcionario_edit', { 'id': funcionario.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
