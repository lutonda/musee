{% extends 'base.html.twig' %}

{% block body %}
    <h1>Habito</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ habito.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ habito.nome }}</td>
            </tr>
            <tr>
                <th>Designacao</th>
                <td>{{ habito.designacao }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('habito_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('habito_edit', { 'id': habito.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
