{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscricao</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ inscricao.id }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{% if inscricao.data %}{{ inscricao.data|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('inscricao_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('inscricao_edit', { 'id': inscricao.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
