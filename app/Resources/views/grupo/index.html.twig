{% extends 'base.html.twig' %}

{% block body %}
    <h1>Grupos list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for grupo in grupos %}
            <tr>
                <td><a href="{{ path('grupo_show', { 'id': grupo.id }) }}">{{ grupo.id }}</a></td>
                <td>{{ grupo.nome }}</td>
                <td>{{ grupo.tipo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('grupo_show', { 'id': grupo.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('grupo_edit', { 'id': grupo.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('grupo_new') }}">Create a new grupo</a>
        </li>
    </ul>
{% endblock %}
