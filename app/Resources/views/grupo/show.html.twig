{% extends 'base.html.twig' %}

{% block body %}
    <h1>Grupo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ grupo.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ grupo.nome }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ grupo.tipo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('grupo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('grupo_edit', { 'id': grupo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
